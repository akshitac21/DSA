{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=gnu++14",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Compile and Run with IO",
            "command": "bash",
            "args": [
                "-c",
                "/usr/bin/clang++ -std=gnu++14 -fcolor-diagnostics -fansi-escape-codes -g '${file}' -o /tmp/temp_exec && /tmp/temp_exec < '${workspaceFolder}/input.txt' > '${workspaceFolder}/output.txt' && rm /tmp/temp_exec"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ],
    "version": "2.0.0"
}